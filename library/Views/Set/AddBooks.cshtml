@model library.Models.SetBookVM

@{
    ViewData["Title"] = "AddBooks";
}

<h1>AddBooks</h1>

<h4>SetBookVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBooks">
            <div class="form-group">
                <label asp-for="SetName" class="control-label" hidden="hidden"></label>
                <input asp-for="SetName" class="form-control" hidden="hidden" />
                <span asp-validation-for="SetName" class="text-danger" hidden="hidden"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="alert alert-danger">
    <ul>
        @foreach (var modelState in ViewData.ModelState.Values)
        {
            @foreach (var error in modelState.Errors)
            {
                <li>@error.ErrorMessage</li>
            }
        }
    </ul>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
